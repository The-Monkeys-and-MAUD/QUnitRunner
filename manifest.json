{
	"name": "QUnit",
	"version": "1.0",
	"description": "Includes QUnit and runs any tests in the page",
	"permissions": [
		"tabs", "http://*/*", "https://*/*"
	],
	"background": {
    	"scripts": ["background.js"]

  	},
	"browser_action": {
		"default_icon": "icon.png"
	},
	"icons": {
		"16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
	"content_scripts": [
		{
		  "matches": ["*://*/*"],
		  "css": ["qunit.css"],
		  "js": ["jquery-1.7.2.min.js","qunit.js"]
		}
	]
}